<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/jabatan_chart_area"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/blueBasicPale"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jabatan_chart_title"
                style="@style/IndividuTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blueBasicDark"
                android:gravity="center"
                android:text="Komposisi Jabatan Pegawai" />

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/jabatan_chart"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="5dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>