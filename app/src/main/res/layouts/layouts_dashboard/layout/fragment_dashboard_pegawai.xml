<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBasic"
    android:clickable="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/dashboard_pegawai_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="150dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/dashboard_pegawai_layout"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <include
                layout="@layout/i_profil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/i_jaringan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/i_presensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/i_tunjangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include
                layout="@layout/i_cuti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueBasicDark"
            android:orientation="horizontal">

            <TextView
                style="@style/IndividuTextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="@string/copyright"
                android:textColor="@color/whiteAlternate" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>