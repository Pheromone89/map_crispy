<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/blueBasic"
    android:clickable="true"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/dashboard_pegawai_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="150dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/debug"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TEST"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/dashboard_pegawai_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/dashboard_panel_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical" />

            </ScrollView>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/dashboard_pegawai_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_eye" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dashboard_pegawai_panel_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blueBasicDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_profil_option"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_person"
                         />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_profil_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_presensi_option"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_menu_absen_white"
                            />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_presensi_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_jaringan_option"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_wifi"
                            />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_jaringan_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_cuti_option"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_beach"
                            android:tint="#ffffff"
                            />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_cuti_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_tunjangan_option"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="15dp"
                            android:src="@drawable/ic_rupiah"
                            />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_tunjangan_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_notifikasi_atasan_option"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_duo" />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_notifikasi_atasan_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                    <android.support.v7.widget.CardView
                        android:id="@+id/dashboard_pegawai_hotspot_option"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/blueBasic"
                        app:cardCornerRadius="25dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            android:src="@drawable/ic_wifi"
                            android:tint="#ffffff"
                            />

                        <LinearLayout
                            android:id="@+id/dashboard_pegawai_hotspot_option_progressbar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/blueBasic"
                            android:clickable="false"
                            android:orientation="vertical"
                            android:padding="5dp"
                            android:visibility="gone">

                            <ProgressBar
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/blueBasic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/blueBasicDark"
            android:elevation="5dp"
            android:orientation="horizontal">

            <TextView
                style="@style/IndividuTextTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="10dp"
                android:text="@string/copyright"
                android:textColor="@color/whiteAlternate"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>