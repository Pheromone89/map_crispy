<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dashboard_admin_panel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/informasi_strategis_piechart_layout_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/whiteAlternate"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/informasi_strategis_piechart_judul_layout_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/blueBasicDark"
                app:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/informasi_strategis_piechart_judul_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textColor="@color/whiteAlternate"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/informasi_strategis_piechart_chart_1"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/informasi_strategis_piechart_chart_2"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:visibility="gone" />

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/informasi_strategis_piechart_chart_3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_margin="5dp"
                android:visibility="gone" />

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/informasi_strategis_piechart_progress_bar_3"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleX="0.3"
                android:scaleY="0.3"
                android:src="@drawable/map_logo_animated" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>