<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/whiteAlternate"
    android:id="@+id/data_unit_layout"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:id="@+id/profil_pegawai_data_pengembangan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingStart="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/data_unit_nama"
                style="@style/LoginScreenText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="15sp"
                tools:text="test" />

            <TextView
                android:id="@+id/data_unit_tmt_unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:textSize="12sp"
                tools:text="tmt jabatan" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/data_unit_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/data_unit_nomor"
                style="@style/LoginScreenText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                tools:text="Nomor Sertifikat: " />

            <TextView
                android:id="@+id/data_unit_tanggal"
                style="@style/LoginScreenText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textSize="12sp"
                tools:text="Tanggal Sertifikat: " />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>