<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBasic"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/informasi_strategis_indikator_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/informasi_strategis_indikator_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/informasi_strategis_piechart_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@color/whiteAlternate"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:id="@+id/informasi_strategis_piechart1_judul_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/blueBasicDark"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/informasi_strategis_piechart1_judul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/informasi_strategis_piechart_chart1"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/informasi_strategis_piechart_legend1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/informasi_strategis_piechart_legend_judul1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="detail"
                            android:textColor="@color/blueBasicDark"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/informasi_strategis_piechart_legend1_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/informasi_strategis_piechart2_judul_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/blueBasicDark"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/informasi_strategis_piechart2_judul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/informasi_strategis_piechart_chart2"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/informasi_strategis_piechart_legend2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/informasi_strategis_piechart_legend_judul2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="detail"
                            android:textColor="@color/blue"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/informasi_strategis_piechart_legend2_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <android.support.v7.widget.CardView
                        android:id="@+id/informasi_strategis_piechart3_judul_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/blueBasicDark"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:id="@+id/informasi_strategis_piechart3_judul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <com.github.mikephil.charting.charts.PieChart
                        android:id="@+id/informasi_strategis_piechart_chart3"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:layout_margin="5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/informasi_strategis_piechart_legend3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/informasi_strategis_piechart_legend_judul3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="detail"
                            android:textColor="@color/blueBasicDark"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5dp"
                            android:layout_marginStart="5dp"
                            android:orientation="vertical">

                            <android.support.v7.widget.RecyclerView
                                android:id="@+id/informasi_strategis_piechart_legend3_recycler_view"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />

                        </LinearLayout>

                    </LinearLayout>

                    <pl.droidsonroids.gif.GifImageView
                        android:id="@+id/informasi_strategis_piechart_progress_bar"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:scaleX="0.3"
                        android:scaleY="0.3"
                        android:src="@drawable/map_logo_animated" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/informasi_strategis_indikator_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scaleX="0.3"
        android:scaleY="0.3"
        android:src="@drawable/map_logo_animated" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueBasicDark"
        android:orientation="horizontal">

        <TextView
            style="@style/IndividuTextTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:text="@string/copyright"
            android:textColor="@color/whiteAlternate"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>


