<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.go.bpkp.mobilemapbpkp.SplashscreenActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/splashup" />

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="20dp"
        android:paddingTop="20dp"
        android:src="@drawable/logo_bpkp" />

    <ImageView
        android:id="@+id/splash_bottom"
        android:layout_width="320dp"
        android:layout_height="320dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:scaleType="fitCenter"
        android:src="@drawable/splashbot" />

    <TextView
        android:id="@+id/splash_title"
        style="@style/LoginScreenText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/splash_logo"
        android:layout_marginBottom="21dp"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:text="@null"
        android:textSize="30sp" />


</RelativeLayout>