<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/blueBasic"
    tools:context="id.go.bpkp.mobilemapbpkp.splashscreen.SplashscreenActivity">

    <android.support.v7.widget.CardView
        android:id="@+id/splash_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="60dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="20dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@color/blueBasic"
            android:scaleType="fitXY"
            android:src="@drawable/splashscreen_logo" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/version_name"
        style="@style/IndividuTextTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="Mobile MAP BPKP versi "
        android:textColor="@color/whiteAlternate" />
</RelativeLayout>