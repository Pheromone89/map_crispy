<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBasic"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/cuti_persetujuan_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:id="@+id/cuti_persetujuan_fail_overhead_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@android:color/holo_red_light"
            app:cardCornerRadius="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="7dp"
                android:text="Pengajuan gagal. Silakan coba kembali"
                android:textColor="@color/whiteAlternate"
                android:textStyle="bold" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/whiteAlternate"
            app:cardCornerRadius="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:background="@color/blueBasicDark"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <android.support.v7.widget.CardView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                app:cardBackgroundColor="@color/whiteAlternate"
                                app:cardCornerRadius="25dp"
                                app:cardElevation="5dp">

                                <ImageView
                                    android:id="@+id/cuti_persetujuan_profic_foto"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop" />

                            </android.support.v7.widget.CardView>

                            <TextView
                                android:id="@+id/cuti_persetujuan_profil_nama"
                                style="@style/LoginScreenText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Nama Pegawai"
                                android:textColor="@color/whiteAlternate"
                                android:textSize="17sp" />

                            <TextView
                                android:id="@+id/cuti_persetujuan_profil_nip"
                                style="@style/LoginScreenText"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="19970707 201801 2 001"
                                android:textColor="@color/whiteAlternate"
                                android:textSize="15sp"
                                android:visibility="gone" />
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:id="@+id/cuti_persetujuan_form_persetujuan_cuti"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:paddingEnd="15dp"
                                android:paddingStart="15dp"
                                android:paddingTop="5dp"
                                android:visibility="gone">

                                <TextView
                                    style="@style/IndividuTextContent"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="10dp"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    android:text="Persetujuan Izin Cuti"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Jenis cuti:" />

                                <TextView
                                    android:id="@+id/cuti_persetujuan_jenis_cuti"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Cooti tahoonan"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tanggal mulai" />

                                    <TextView
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:text="Tanggal selesai" />

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/cuti_persetujuan_tanggal_mulai"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:text="Tanggal mulai:"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/cuti_persetujuan_tanggal_selesai"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="5dp"
                                        android:layout_weight="1"
                                        android:text="Tanggal selesai:"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Alasan:" />

                                <TextView
                                    android:id="@+id/cuti_persetujuan_alasan"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Alaasan kon!"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Alamat:" />

                                <TextView
                                    android:id="@+id/cuti_persetujuan_alamat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:text="Alaamat kon!"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:id="@+id/cuti_persetujuan_catatan_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/cuti_persetujuan_catatan_label"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Reviu sebelumnya:" />

                                    <TextView
                                        android:id="@+id/cuti_persetujuan_catatan"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Catatatatatan kon!"
                                        android:textSize="17sp"
                                        android:textStyle="bold" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/cuti_persetujuan_catatan_edit_layout"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="5dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Keterangan persetujuan/penolakan:" />

                                    <EditText
                                        android:id="@+id/cuti_persetujuan_catatan_edittext"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="top"
                                        android:hint="(opsional)"
                                        android:minLines="3" />

                                </LinearLayout>

                            </LinearLayout>

                            <ProgressBar
                                android:id="@+id/cuti_persetujuan_progress_bar"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_margin="20dp" />
                        </RelativeLayout>

                    </LinearLayout>
                </ScrollView>

                <LinearLayout
                    android:id="@+id/cuti_persetujuan_setuju_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cuti_persetujuan_setuju_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/green"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="SETUJU"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <LinearLayout
                        android:layout_width="15dp"
                        android:layout_height="match_parent" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cuti_persetujuan_tolak_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/red"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="TOLAK"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/cuti_persetujuan_teruskan_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:orientation="horizontal">

                    <android.support.v7.widget.CardView
                        android:id="@+id/cuti_persetujuan_teruskan_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@color/blueBasicDark"
                        app:cardCornerRadius="5dp"
                        app:cardElevation="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="15dp"
                            android:text="TERUSKAN"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuti_persetujuan_konfirmasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c5006db2"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/whiteAlternate"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteAlternate"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Apakah Anda yakin?"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteAlternate"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2" />

                    <android.support.v7.widget.CardView
                        android:id="@+id/cuti_persetujuan_konfirmasi_ya"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10dp"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_green_light"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="YA"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/cuti_persetujuan_konfirmasi_tidak"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:cardBackgroundColor="@android:color/holo_red_light"
                        app:cardCornerRadius="5dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="TIDAK"
                            android:textColor="@android:color/black"
                            android:textStyle="bold" />

                    </android.support.v7.widget.CardView>


                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuti_persetujuan_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c5006db2"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/cuti_persetujuan_progressbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="150dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuti_persetujuan_message_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c5006db2"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#c5006db2" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/whiteAlternate"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/cuti_persetujuan_message_success_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteAlternate"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Persetujuan cuti berhasil"
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cuti_persetujuan_message_success_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@android:color/holo_green_light"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="OK"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/cuti_persetujuan_message_failed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c5006db2"
        android:clickable="true"
        android:focusable="true"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#c5006db2" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardBackgroundColor="@color/whiteAlternate"
            app:cardCornerRadius="10dp"
            app:cardElevation="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/whiteAlternate"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="Pengajuan cuti gagal, silakan coba lagi."
                    android:textColor="@android:color/black"
                    android:textStyle="bold" />

                <android.support.v7.widget.CardView
                    android:id="@+id/cuti_persetujuan_message_fail_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@android:color/holo_red_light"
                    app:cardCornerRadius="5dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:text="OK"
                        android:textColor="@android:color/black"
                        android:textStyle="bold" />

                </android.support.v7.widget.CardView>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>