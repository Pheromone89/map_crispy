<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blueBasic"
    android:clickable="true">

    <ProgressBar
        android:id="@+id/cuti_pegawai_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="150dp"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/cuti_pegawai_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <include
            layout="@layout/i_dashboard_pegawai_profil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp" />

        <ProgressBar
            android:layout_width="match_parent"
            android:id="@+id/list_progress_bar"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="50dp" />

        <include
            layout="@layout/i_dashboard_cuti_pegawai_pengajuan_cuti_aktif"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/cuti_list_cardview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"
                android:visibility="gone"
                app:cardBackgroundColor="@color/whiteAlternate"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        app:cardBackgroundColor="@color/blueBasicDark"
                        app:cardCornerRadius="10dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:gravity="center"
                            android:text="Daftar Pengajuan Cuti"
                            android:textColor="@color/whiteAlternate"
                            android:textStyle="bold" />

                        <android.support.v7.widget.CardView
                            android:layout_width="50dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end"
                            android:layout_marginBottom="5dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginTop="5dp"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="10dp">

                            <TextView
                                android:id="@+id/dashboard_cuti_saldo_singkat"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="âˆž"
                                android:textColor="@color/whiteAlternate"
                                android:textSize="12sp" />

                        </android.support.v7.widget.CardView>

                    </android.support.v7.widget.CardView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp">

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/recycler_view_cuti"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scrollbars="vertical" />

                        <LinearLayout
                            android:id="@+id/message_tidak_ada_cuti"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="30dp"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="50dp"
                                android:layout_marginRight="50dp"
                                android:layout_weight="5"
                                android:src="@drawable/ic_under_construction"
                                android:tint="@color/blueBasicDark" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Tidak ada transaksi"
                                android:textColor="@color/blueBasicDark"
                                android:textSize="20sp"
                                android:textStyle="bold" />

                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/dashboard_cuti_daftar_cuti_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:visibility="gone"
                app:cardBackgroundColor="@color/blueBasicDark"
                app:cardCornerRadius="10dp">

                <TextView
                    style="@style/IndividuTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:text="Lihat Daftar Cuti"
                    android:textSize="17sp" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/dashboard_cuti_pengajuan_cuti_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/blueBasicDark"
                app:cardCornerRadius="10dp">

                <ProgressBar
                    android:id="@+id/cuti_pegawai_dashboard_pengajuan_progress_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/cuti_pegawai_dashboard_pengajuan_label"
                    style="@style/IndividuTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="5dp"
                    android:gravity="center"
                    android:text="Buat Pengajuan Cuti"
                    android:textSize="15sp" />

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/dashboard_cuti_persetujuan_cuti_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/blueBasicDark"
            app:cardCornerRadius="10dp">

            <ProgressBar
                android:id="@+id/cuti_pegawai_dashboard_persetujuan_progress_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone" />

            <TextView
                android:id="@+id/cuti_pegawai_dashboard_persetujuan_label"
                style="@style/IndividuTextTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="5dp"
                android:gravity="center"
                android:text="Persetujuan"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/cuti_pegawai_notifikasi"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="end"
                android:visibility="gone">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_circle"
                    android:tint="@color/red" />

                <TextView
                    android:id="@+id/cuti_pegawai_jumlah_notifikasi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="~"
                    android:textColor="@color/whiteAlternate"
                    android:textStyle="bold" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>

    <include
        layout="@layout/i_dashboard_cuti_pegawai_data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp" />
</RelativeLayout>